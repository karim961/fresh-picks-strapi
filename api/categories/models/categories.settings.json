{
  "kind": "collectionType",
  "collectionName": "categories",
  "info": {
    "name": "categories",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "hero_banner": {
      "type": "component",
      "repeatable": false,
      "component": "section.hero-banner"
    },
    "description": {
      "type": "richtext"
    },
    "image": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false
    },
    "products": {
      "collection": "products",
      "via": "category"
    },
    "slug": {
      "type": "string",
      "unique": true
    },
    "order": {
      "type": "integer",
      "unique": true
    }
  }
}
